<p id="notice"><%= notice %></p>

<h1>Departments</h1>

<div class="flex flex-col">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                Name
              </th>
              <th colspan="3" class="px-6 py-3 bg-gray-50">
              </th>
            </tr>
          </thead>
          <tbody>
            <% @departments.each do |department| %>
            <tr class=" bg-white">
              <td class="px-6 py-4 whitespace-no-wrap text-sm leading-5 font-medium text-gray-900">
                <%= department.name %>
              </td>

              <td colspan="3" class="px-6 py-4 whitespace-no-wrap text-sm leading-5 font-medium">
                <span class="text-indigo-600 hover:text-indigo-900">
                  <%= link_to 'Show', department %>
                  <%= link_to 'Edit', edit_department_path(department) %>
                  <%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<br>

